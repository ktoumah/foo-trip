{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="bg-white shadow-md p-4 my-2">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">DÃ©couvrez le plaisir de voyager</h2>
    </div>
    <div class="flex flex-wrap justify-start p-1  mt-10">
        {% for destination in destinations %}
            <div class="w-full max-w-sm bg-white m-2 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <a href="{{ path('app_view', {id: destination.id}) }}">
                    <img class="p-8 rounded-t-lg" src="{{ destination.image }}" alt="destination image" />
                </a>
                <div class="px-5 pb-5">
                    <a href="{{ path('app_view', {id: destination.id}) }}">
                        <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ destination.name }}</h5>
                    </a>
                    <div class="flex items-center mt-2.5 mb-5">
                        <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ms-3">{{ destination.duration }} J</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-3xl font-bold text-gray-900 dark:text-white">MAD {{ destination.price }}</span>
                        <a href="{{ path('app_view', {id: destination.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Visiter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="mt-6">
        <div class="navigation">
            {{ knp_pagination_render(destinations) }}
        </div>
    </div>
{% endblock %}
